<body class="animsition">
    <div class="page-wrapper">
        <!-- MENU SIDEBAR-->
        <aside class="menu-sidebar2">
            <div class="logo">
                <a href="/#">
                    <img src="/images/icon/logo-white.png" alt="Cool Admin" />
                </a>
            </div>
            <div class="menu-sidebar2__content js-scrollbar1">
                <div class="account2">
                    <a href="/signout">Sign out</a>
                </div>
                <nav class="navbar-sidebar2">
                    <ul class="list-unstyled navbar__list">
                        <li>
                            <a href="/">
                                <i class="fas fa-tachometer-alt"></i>Dashboard</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>
        <!-- END MENU SIDEBAR-->

        <!-- PAGE CONTAINER-->
        <div class="page-container2">
            <!-- HEADER DESKTOP-->
            <header class="header-desktop2">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="header-wrap2">
                            <div class="logo d-block d-lg-none">
                                <a href="/#">
                                    <img src="/images/icon/logo-white.png" alt="CoolAdmin" />
                                </a>
                            </div>
                            <div class="header-button-item mr-0 js-sidebar-btn">
                                <i class="zmdi zmdi-menu"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </header>
            <aside class="menu-sidebar2 js-right-sidebar d-block d-lg-none">
                <div class="logo">
                    <a href="/#">
                        <img src="/images/icon/logo-white.png" alt="Cool Admin" />
                    </a>
                </div>
                <div class="menu-sidebar2__content js-scrollbar2">
                    <div class="account2">
                        <a href="/logout">Sign out</a>
                    </div>
                    <nav class="navbar-sidebar2">
                        <ul class="list-unstyled navbar__list">
                            <li>
                                <a href="/">
                                    <i class="fas fa-tachometer-alt"></i>Dashboard</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </aside>
            <!-- END HEADER DESKTOP-->

            <!-- BREADCRUMB-->
            <section class="au-breadcrumb m-t-75">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="au-breadcrumb-content">
                                    <div class="au-breadcrumb-left">
                                        <span class="au-breadcrumb-span">You are here:</span>
                                        <ul class="list-unstyled list-inline au-breadcrumb__list">
                                            <li class="list-inline-item active">
                                                <a href="/">Home</a>
                                            </li>
                                            <li class="list-inline-item seprate">
                                                <span>/</span>
                                            </li>
                                            <li class="list-inline-item">Edit User</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!-- END BREADCRUMB-->

            <div class="card">
                <div class="card-header">Edit User</div>
                <div class="card-body">
                    <hr>
                    <%-include("./partials/messages") %>

                    <form method="post" novalidate="novalidate">
                        <div class="form-group has-success">
                            <label for="cc-name" class="control-label mb-1">Email</label>
                            <input id="cc-name" type="text" class="form-control cc-name valid" value="<%=customer.email%>" readonly required>
                        </div>
                        <div class="form-group has-success">
                            <label for="cc-name" class="control-label mb-1">Account Balance</label>
                            <input id="cc-name" name="balance" type="number" class="form-control cc-name valid" value="<%=customer.balance%>" required>
                        </div>
                        <div class="form-group has-success">
                            <label for="cc-name" class="control-label mb-1">Total Profit</label>
                            <input id="cc-name" name="total_profit" type="number" class="form-control cc-name valid" value="<%=customer.total_profit%>" required>
                        </div>
                        <div class="form-group has-success">
                            <label for="cc-name" class="control-label mb-1">Invested</label>
                            <input id="cc-name" name="invested" type="number" class="form-control cc-name valid" value="<%=customer.invested%>" required>
                        </div>
                        <div class="form-group has-success">
                            <label for="cc-name" class="control-label mb-1">Total Withdraw</label>
                            <input id="cc-name" name="total_withdraw" type="number" class="form-control cc-name valid" value="<%=customer.total_withdraw%>" required>
                        </div>
                        <div class="form-group has-success">
                            <label for="cc-name" class="control-label mb-1">Upgraded</label>
                            <select name="upgraded" class="form-control">
                                <option value="<%=customer.upgraded%>" selected>select</option>
                                <option value="true">Upgraded</option>
                                <option value="false">Not upgraded</option>
                            </select>
                        </div>
                        <div class="form-group has-success">
                            <label for="cc-name" class="control-label mb-1">Acoount plan</label>
                            <input id="cc-name" name="account_type" type="text" class="form-control cc-name valid" value="<%=customer.account_type%>" required>
                        </div>
                        <div>
                            <button id="payment-button" type="submit" class="btn btn-lg btn-info btn-block">
                                <i class="fa fa-lock fa-lg"></i>&nbsp;
                                <span id="payment-button-amount">Update Account</span>
                            </button>
                        </div>
                    </form>

                    <hr>
                    <h3>Danger</h3>
                    <hr>
                    <a href="/delete-account/<%=customer.id%>" class="btn btn-danger">Delete Account</a>
                </div>
            </div>

            <section>
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="copyright">
                                <p>Copyright Â© 2021 Expert Mining Trade.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!-- END PAGE CONTAINER-->
        </div>

    </div>

    <!-- Jquery JS-->
    <script src="/vendor/jquery-3.2.1.min.js"></script>
    <!-- Bootstrap JS-->
    <script src="/vendor/bootstrap-4.1/popper.min.js"></script>
